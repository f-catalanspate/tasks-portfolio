import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

data = pd.read_csv('sizing_task1.csv', delimiter=';')

data.head()

days_order = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']
data['DayOfWeek'] = pd.Categorical(data['DayOfWeek'], categories=days_order, ordered=True)

avg_demand_per_hour = data.groupby('Hour')['Total Potential Demand'].mean().reset_index()

plt.figure(figsize=(10, 6))
plt.plot(avg_demand_per_hour['Hour'], avg_demand_per_hour['Total Potential Demand'], marker='o')
plt.title('24-Hour Curve of Average Potential Demand')
plt.xlabel('Hour of Day')
plt.ylabel('Average Potential Demand')
plt.xticks(range(0, 24))
plt.grid(True)
plt.show()
